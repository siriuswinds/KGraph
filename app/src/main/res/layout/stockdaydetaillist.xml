<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
    android:minHeight="50dp"
    android:gravity="center">
    <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
            android:gravity="center"
                android:id="@+id/txtDealTime" android:layout_column="0"/>
        <TextView
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Small Text"
            android:textColor="@color/gray"
                android:id="@+id/txtPrice" android:layout_column="1" android:textAlignment="textEnd"
                android:layout_marginLeft="3dp" android:gravity="right"/>
        <TextView
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Small Text"
            android:textColor="@color/gray"
                android:id="@+id/txtPriceCHG" android:layout_column="2" android:textAlignment="textEnd"
                android:layout_marginLeft="3dp" android:gravity="right"/>
        <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Small Text"
                android:textColor="@color/gray"
                android:id="@+id/txtDealCount" android:layout_column="3" android:textAlignment="viewEnd"
                android:layout_marginLeft="3dp" android:gravity="right"/>
        <TextView
                android:layout_width="83dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Small Text"
            android:textColor="@color/gray"
                android:id="@+id/txtDealAmount" android:layout_column="4" android:textAlignment="viewEnd"
                android:layout_marginLeft="3dp" android:gravity="right"/>
    </TableRow>
    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:textColor="@color/gray"
        android:id="@+id/txtDealType" android:layout_column="0" android:textAlignment="viewEnd"
        android:gravity="center"/>
    </TableRow>
</TableLayout>