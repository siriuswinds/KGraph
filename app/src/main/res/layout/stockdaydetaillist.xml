<?xml version="1.0" encoding="utf-8"?>

<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
    android:minHeight="50dp"
    android:gravity="center">

    <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:id="@+id/txtDealTime" android:layout_column="0"/>
        <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:id="@+id/txtPrice" android:layout_column="1" android:textAlignment="textEnd"
                android:layout_marginLeft="5dp" android:gravity="right"/>
        <TextView
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:id="@+id/txtPriceCHG" android:layout_column="2" android:textAlignment="textEnd"
                android:layout_marginLeft="5dp" android:gravity="right"/>
        <TextView
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:id="@+id/txtDealCount" android:layout_column="3" android:textAlignment="viewEnd"
                android:layout_marginLeft="5dp" android:gravity="right"/>
        <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:id="@+id/txtDealAmount" android:layout_column="4" android:textAlignment="viewEnd"
                android:layout_marginLeft="5dp" android:gravity="right"/>
        <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:id="@+id/txtDealType" android:layout_column="5" android:textAlignment="viewEnd"
                android:layout_marginLeft="5dp" android:gravity="right"/>
    </TableRow>
</TableLayout>