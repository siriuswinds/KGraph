<?xml version="1.0" encoding="utf-8"?>

<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent" android:layout_marginTop="5dp"
    android:gravity="center"
    android:minHeight="50dp">
    <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:id="@+id/txtDate" android:layout_column="0"/>
        <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Small Text"
            android:textColor="@color/gray"
                android:id="@+id/txtTCLOSE" android:layout_column="1" android:textAlignment="textEnd"
                android:layout_marginLeft="3dp" android:gravity="right"/>
        <TextView
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Small Text"
            android:textColor="@color/gray"
            android:id="@+id/txtTOPEN" android:layout_column="2" android:textAlignment="viewEnd"
            android:layout_marginLeft="3dp" android:gravity="right"/>
        <TextView
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Small Text"
            android:textColor="@color/gray"
            android:id="@+id/txtLOW" android:layout_column="3" android:textAlignment="viewEnd"
            android:layout_marginLeft="3dp" android:gravity="right"/>
        <TextView
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Small Text"
            android:textColor="@color/gray"
            android:id="@+id/txtHIGH" android:layout_column="4" android:textAlignment="viewEnd"
            android:layout_marginLeft="3dp" android:gravity="right"/>
    </TableRow>
    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/txtWeek" android:layout_column="0" android:textAlignment="textEnd"
            android:gravity="center"/>
        <TextView
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/txtCHG" android:layout_column="1" android:textAlignment="textEnd"
            android:layout_marginLeft="5dp" android:gravity="right"/>
        <TextView
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/txtPCHG" android:layout_column="2" android:textAlignment="viewEnd"
            android:layout_marginLeft="5dp" android:gravity="right"/>
        <TextView
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="换手率"
            android:id="@+id/txtTURNOVER" android:layout_column="3" android:textAlignment="textEnd"
            android:layout_marginLeft="5dp" android:gravity="right"/>
        <TextView
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="成交额"
            android:id="@+id/txtVATURNOVER" android:layout_column="4" android:textAlignment="viewEnd"
            android:layout_marginLeft="5dp" android:gravity="right"/>
    </TableRow>
</TableLayout>